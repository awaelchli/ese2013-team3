<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen 
    android:title="Preferences"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory 
        android:title="Wordlists"
        android:key="wordlists">
        <ListPreference 
            android:title="Choose Wordlist"
            android:key="choose_wordlist"
            android:entries="@array/wordlist_entries"
            android:entryValues="@array/wordlist_entryValues"
            android:defaultValue="1"/>
        <Preference 
            android:title="Edit Wordlists"
            android:key="edit_wordlists" >
            </Preference>
    </PreferenceCategory>
	 
	<PreferenceCategory 
        android:title="User Data"
        android:key="userdata">
		<EditTextPreference 
		    android:title="Username"
		    android:key="username"/>
		<EditTextPreference 
		    android:title="Email"
		    android:key="email"/>
        
    </PreferenceCategory>
    
</PreferenceScreen>
