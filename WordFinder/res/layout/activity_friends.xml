<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".FriendsActivity" >

    <TextView
        android:id="@+id/friend_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/friend_list_title"
        android:textSize="@dimen/friends_list_title_textsize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3" >

        <EditText
            android:id="@+id/emailToAdd"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:ems="10"
            android:hint="@string/emailHint"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/add_friend_button"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="addFriend"
            android:text="@string/add_friend_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="10" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:text="@string/requests_field" 
            android:layout_weight="1"/>

        <ListView
            android:id="@+id/request_list"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="4" >
        </ListView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:text="@string/friends_field" 
            android:layout_weight="1"/>

        <ListView
            android:id="@+id/friends_list"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="4">
        </ListView>
    </LinearLayout>

</LinearLayout>