<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/request_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/friend_list_item_padding" >

    <ImageButton
        android:id="@+id/reject_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="true"
        android:background="@drawable/ic_clear_disabled"
        android:layout_alignParentRight="true" />
    
    <ImageButton
        android:id="@+id/accept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="true"
        android:background="@drawable/ic_cab_done_holo_dark"
        android:layout_toLeftOf="@id/reject_button" />
    
    <TextView
        android:id="@+id/friend_username"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/friend_username_textsize"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/accept_button" />


</RelativeLayout>